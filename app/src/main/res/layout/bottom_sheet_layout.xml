<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/bottomSheetRelativeLyout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_right"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    >

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        android:textColor="@color/blackAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/nameTextValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blackAccent"
        android:gravity="start"
        android:hint="Enter your name"
        android:textSize="24sp"
        android:textColor="@color/blackAccent"
        android:layout_toEndOf="@+id/nameText"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/msgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message:"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/blackAccent"
        android:layout_below="@+id/nameText"
        />

    <EditText
        android:id="@+id/msgTextValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="10"
        android:textColor="@color/blackAccent"
        android:layout_below="@+id/msgText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="start|top"
        />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/msgTextValue"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/button_shape"
        />



</RelativeLayout>